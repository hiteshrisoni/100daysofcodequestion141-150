#include <stdio.h>
#include <stdlib.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

int main() {
    struct Student *s;

    // Allocating memory dynamically for one structure
    s = (struct Student *)malloc(sizeof(struct Student));

    if (s == NULL) {
        printf("Memory Allocation Failed\n");
        return 1;  // exit if memory not allocated
    }

    // Taking input
    printf("Enter roll number: ");
    scanf("%d", &s->roll);

    printf("Enter name: ");
    scanf("%s", s->name);

    printf("Enter marks: ");
    scanf("%f", &s->marks);

    // Printing details
    printf("\n--- Student Details ---\n");
    printf("Roll Number: %d\n", s->roll);
    printf("Name: %s\n", s->name);
    printf("Marks: %.2f\n", s->marks);

    // Free allocated memory
    free(s);

    return 0;
}
